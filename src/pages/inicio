<body>
  <h1>Digite o código do dispositivo</h1>
  <input id="codigo" placeholder="ex: Teste1" style="padding:15px;border-radius:5px;" />
  <div id="error-message" class="error"></div>
  <button onclick="salvarCodigo()">Começar</button>

  <script src="https://unpkg.com/@supabase/supabase-js@2.49.4"></script>
  <script>
    // Initialize Supabase client
    const SUPABASE_URL = 'https://heefdxcsucayilaxshxg.supabase.co';
    const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImhlZWZkeGNzdWNheWlsYXhzaHhnIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDczMjU5NzQsImV4cCI6MjA2MjkwMTk3NH0.285en917Bf8CIR3s3vf-Z-AahwQS2PS813mtEQk71oE';
    const supabase = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);
    
    async function salvarCodigo() {
      const errorDiv = document.getElementById('error-message');
      errorDiv.style.display = 'none';
      
      const code = document.getElementById('codigo').value.trim();
      if (!code) {
        errorDiv.textContent = "Digite um código válido";
        errorDiv.style.display = 'block';
        return;
      }
      
      try {
        // Verify the device exists before proceeding
        const { data, error } = await supabase
          .from('devices')
          .select('id')
          .eq('codigo', code)
          .single();
          
        if (error) {
          console.error("Erro ao verificar dispositivo:", error);
          errorDiv.textContent = "Erro ao verificar o código do dispositivo";
          errorDiv.style.display = 'block';
          return;
        }
        
        if (!data) {
          errorDiv.textContent = "Dispositivo não encontrado com o código: " + code;
          errorDiv.style.display = 'block';
          return;
        }
        
        // Device found, save and proceed
        localStorage.setItem('deviceCode', code);
        window.location.href = '/player';
      } catch (err) {
        console.error("Erro:", err);
        errorDiv.textContent = "Ocorreu um erro ao validar o dispositivo";
        errorDiv.style.display = 'block';
      }
    }
    
    // Check if we already have a code stored
    const storedCode = localStorage.getItem('deviceCode');
    if (storedCode) {
      document.getElementById('codigo').value = storedCode;
    }
    
    // Allow pressing Enter to submit
    document.getElementById('codigo').addEventListener('keyup', function(event) {
      if (event.key === 'Enter') {
        salvarCodigo();
      }
    });
  </script>
